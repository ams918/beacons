<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/imageViewMainItemPicture"
        android:src="@drawable/keep_calm_and_wait"
        android:scaleType="fitCenter"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:tag="company_picture"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="125dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shishi Lunch"
                android:id="@+id/textViewMainItemTitle"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:textColor="#ff5915"
                android:textSize="25dp"
                android:textAlignment="gravity"
                android:gravity="bottom|left"
                android:tag="company_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(650) 933-4902"
                android:id="@+id/textViewMainItemPhone"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:textColor="#ff5915"
                android:textSize="25dp"
                android:textAlignment="gravity"
                android:gravity="bottom|left"
                android:textStyle="bold"
                android:tag="company_phone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="650 Castro St #210, Mountain View, CA 94041"
                android:id="@+id/textViewMainItemLocation"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:textColor="#9b9b9b"
                android:textSize="20dp"
                android:textAlignment="gravity"
                android:gravity="bottom|left"
                android:tag="company_location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:id="@+id/textViewMainItemCode"
                android:layout_weight="2"
                android:layout_alignParentBottom="true"
                android:textColor="#9b9b9b"
                android:textSize="10dp"
                android:textAlignment="gravity"
                android:gravity="bottom|left"
                android:tag="company_code"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>